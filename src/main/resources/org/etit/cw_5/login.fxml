<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="180" prefWidth="320" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.etit.cw_5.VisualControllers.LoginController">
    <children>
        <Label text="Имя пользователя">
            <font>
                <Font size="14.0" />
            </font></Label>
        <TextField fx:id="txtUsername" text="user" />
        <Label text="Пароль">
            <font>
                <Font size="14.0" />
            </font></Label>

        <PasswordField fx:id="txtPassword" text="user" />

        <Button fx:id="btnEnter" onAction="#onEnterButtonClick" text="Войти">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label contentDisplay="CENTER" text="Нет аккаунта?">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <Hyperlink onAction="#onRegistrationLinkClick" text="Зарегистрироваться">
               <font>
                  <Font size="14.0" />
               </font>
            </Hyperlink>
            </children>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
