<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="180" prefWidth="320" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.etit.cw_5.VisualControllers.RegistrationController">
    <children>
    <TextField fx:id="txtUsername" promptText="Имя пользователя" />
      <TextField fx:id="tfINN" promptText="ИНН" />
    <PasswordField fx:id="txtPassword" promptText="Пароль" />
    <PasswordField fx:id="txtPasswordSecond" promptText="Повторите пароль" />
      <Label fx:id="lblError" textAlignment="CENTER" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
    <Button fx:id="btnRegistration" onAction="#onRegistrationButtonClick" text="Зарегистрироваться">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
