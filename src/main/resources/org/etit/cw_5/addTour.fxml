<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="350.0" minWidth="300.0" prefHeight="350.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.etit.cw_5.VisualControllers.AddTourController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <ComboBox fx:id="cbGuide" prefHeight="26.0" prefWidth="293.0" promptText="Экскурсовод">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </ComboBox>
        <DatePicker fx:id="dpTourDate" prefHeight="26.0" prefWidth="296.0" promptText="Дата проведения">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </DatePicker>
        <TextField fx:id="tfPeople" onKeyReleased="#tfPeopleOnKeyRealeased" promptText="Количество человек">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </TextField>
      <ComboBox fx:id="cbTourType" prefHeight="26.0" prefWidth="330.0" promptText="Тип">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ComboBox>
        <Button fx:id="btnOK" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#btnOkonClick" text="OK">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
